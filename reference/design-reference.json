{
  "designSystem": {
    "meta": {
      "name": "Media Dashboard Design System",
      "version": "1.0.0",
      "description": "Sistema de design baseado em interface de mídia com tema escuro e layout sidebar"
    },
    "colorPalette": {
      "primary": {
        "50": "#f0f4ff",
        "100": "#e0e7ff",
        "200": "#c7d2fe",
        "300": "#a5b4fc",
        "400": "#818cf8",
        "500": "#6366f1",
        "600": "#4f46e5",
        "700": "#4338ca",
        "800": "#3730a3",
        "900": "#312e81"
      },
      "background": {
        "primary": "#0f172a",
        "secondary": "#1e293b",
        "tertiary": "#334155",
        "card": "#1e293b",
        "overlay": "rgba(15, 23, 42, 0.9)"
      },
      "text": {
        "primary": "#f8fafc",
        "secondary": "#cbd5e1",
        "muted": "#64748b",
        "accent": "#6366f1"
      },
      "status": {
        "success": "#10b981",
        "warning": "#f59e0b",
        "error": "#ef4444",
        "info": "#3b82f6"
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "monospace": "'SF Mono', Monaco, 'Cascadia Code', monospace"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem"
      },
      "fontWeight": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      },
      "lineHeight": {
        "tight": "1.25",
        "normal": "1.5",
        "relaxed": "1.75"
      }
    },
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem"
    },
    "borderRadius": {
      "none": "0",
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
    },
    "components": {
      "sidebar": {
        "width": "240px",
        "backgroundColor": "background.secondary",
        "padding": "spacing.lg",
        "borderRight": "1px solid rgba(255, 255, 255, 0.1)"
      },
      "navigationItem": {
        "padding": "spacing.sm spacing.md",
        "borderRadius": "borderRadius.md",
        "fontSize": "fontSize.sm",
        "fontWeight": "fontWeight.medium",
        "states": {
          "default": {
            "color": "text.secondary",
            "backgroundColor": "transparent"
          },
          "active": {
            "color": "text.primary",
            "backgroundColor": "primary.600"
          },
          "hover": {
            "color": "text.primary",
            "backgroundColor": "background.tertiary"
          }
        }
      },
      "card": {
        "backgroundColor": "background.card",
        "borderRadius": "borderRadius.lg",
        "padding": "spacing.lg",
        "boxShadow": "shadows.md",
        "border": "1px solid rgba(255, 255, 255, 0.05)"
      },
      "mediaCard": {
        "aspectRatio": "2/3",
        "borderRadius": "borderRadius.md",
        "overflow": "hidden",
        "position": "relative",
        "states": {
          "hover": {
            "transform": "scale(1.05)",
            "transition": "transform 0.2s ease"
          }
        }
      },
      "badge": {
        "padding": "spacing.xs spacing.sm",
        "borderRadius": "borderRadius.full",
        "fontSize": "fontSize.xs",
        "fontWeight": "fontWeight.semibold",
        "textTransform": "uppercase",
        "variants": {
          "primary": {
            "backgroundColor": "primary.600",
            "color": "text.primary"
          },
          "success": {
            "backgroundColor": "status.success",
            "color": "text.primary"
          },
          "secondary": {
            "backgroundColor": "background.tertiary",
            "color": "text.secondary"
          }
        }
      },
      "button": {
        "padding": "spacing.sm spacing.md",
        "borderRadius": "borderRadius.md",
        "fontSize": "fontSize.sm",
        "fontWeight": "fontWeight.medium",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "variants": {
          "primary": {
            "backgroundColor": "primary.600",
            "color": "text.primary",
            "states": {
              "hover": {
                "backgroundColor": "primary.700"
              }
            }
          },
          "secondary": {
            "backgroundColor": "background.tertiary",
            "color": "text.secondary",
            "states": {
              "hover": {
                "backgroundColor": "background.card"
              }
            }
          }
        }
      },
      "searchInput": {
        "backgroundColor": "background.tertiary",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "borderRadius": "borderRadius.lg",
        "padding": "spacing.sm spacing.md",
        "color": "text.primary",
        "fontSize": "fontSize.sm",
        "states": {
          "focus": {
            "borderColor": "primary.500",
            "outline": "2px solid rgba(99, 102, 241, 0.2)"
          }
        }
      }
    },
    "layout": {
      "container": {
        "maxWidth": "1200px",
        "margin": "0 auto",
        "padding": "0 spacing.lg"
      },
      "grid": {
        "mediaGrid": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fill, minmax(200px, 1fr))",
          "gap": "spacing.lg"
        },
        "mainLayout": {
          "display": "grid",
          "gridTemplateColumns": "240px 1fr",
          "minHeight": "100vh"
        }
      },
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    },
    "animations": {
      "transitions": {
        "fast": "0.15s ease",
        "normal": "0.2s ease",
        "slow": "0.3s ease"
      },
      "effects": {
        "fadeIn": {
          "from": { "opacity": "0" },
          "to": { "opacity": "1" }
        },
        "slideUp": {
          "from": { "transform": "translateY(10px)", "opacity": "0" },
          "to": { "transform": "translateY(0)", "opacity": "1" }
        }
      }
    },
    "patterns": {
      "darkTheme": {
        "description": "Tema escuro principal com contrastes altos",
        "implementation": "Aplicar cores de background escuras com texto claro"
      },
      "cardLayout": {
        "description": "Layout baseado em cards para exibição de conteúdo",
        "implementation": "Grid responsivo com cards uniformes"
      },
      "sidebarNavigation": {
        "description": "Navegação lateral fixa com estados visuais",
        "implementation": "Sidebar com largura fixa e itens com estados hover/active"
      },
      "statusIndicators": {
        "description": "Badges e indicadores visuais para status",
        "implementation": "Elementos pequenos com cores específicas para diferentes estados"
      }
    }
  }
}
